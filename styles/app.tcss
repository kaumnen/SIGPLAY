Screen {
    background: #1a1a1a;
    color: #fff8dc;
}

Header {
    dock: top;
    height: auto;
    background: #2d2d2d;
    border: solid #cc5500;
    padding: 1;
}

#header-logo {
    background: #2d2d2d;
    color: #ff8c00;
    text-align: center;
    height: auto;
}

#header-divider {
    background: #2d2d2d;
    color: #cc5500;
    text-align: center;
    height: 1;
    padding: 0;
}

#header-volume {
    background: #2d2d2d;
    color: #fff8dc;
    text-align: center;
    height: 1;
    padding: 0;
    margin-top: 1;
}

Footer {
    dock: bottom;
    height: 3;
    background: #2d2d2d;
    color: #fff8dc;
    border: solid #cc5500;
}

#top-container {
    height: 2fr;
    width: 100%;
}

Horizontal {
    height: auto;
}

ListView {
    background: #1a1a1a;
    border: none;
    padding: 1;
}

ListItem {
    background: #1a1a1a;
    color: #fff8dc;
    padding: 0 1;
}

ListItem:hover {
    background: #2d2d2d;
    color: #ffb347;
}

ListItem.--highlight {
    background: #ff8c00;
    color: #1a1a1a;
}

Container {
    background: #1a1a1a;
}

Static {
    background: transparent;
    color: #fff8dc;
}

LibraryView {
    width: 1fr;
    height: 100%;
    background: #1a1a1a;
    border: solid #ff8c00;
    padding: 1;
}

LibraryView > Label {
    color: #ff8c00;
    text-style: bold;
    padding: 0 0 1 0;
}

NowPlayingView {
    width: 1fr;
    height: 100%;
    align: center middle;
    border: solid #ff8c00;
    margin-left: 1;
}

NowPlayingView Vertical {
    width: 80%;
    height: auto;
    align: center middle;
}

NowPlayingView Static {
    text-align: center;
}

NowPlayingView .music-icon {
    color: #ff8c00;
    text-style: bold;
    margin-bottom: 1;
}

NowPlayingView .track-title {
    color: #ff8c00;
    text-style: bold;
    margin-bottom: 1;
}

NowPlayingView .track-metadata {
    color: #ffb347;
    margin-bottom: 1;
}

NowPlayingView .time-display {
    margin-top: 1;
}

NowPlayingView .state-display {
    color: #ff8c00;
    margin-top: 1;
}

#np-vu-meters {
    margin: 2 4;
    text-align: center;
}



MetersView {
    width: 100%;
    height: 1fr;
    align: center middle;
    border: solid #ff8c00;
    margin-top: 1;
    background: #0a0a0a;
    padding: 1 2;
}

#byte-stream-display {
    width: 100%;
    height: 100%;
    background: #0a0a0a;
    padding: 0 2;
}

#view-switcher {
    width: 100%;
    height: 1fr;
}

#main-view {
    width: 100%;
    height: 100%;
    background: #1a1a1a;
}

FloppyMixView {
    width: 100%;
    height: 100%;
    background: #1a1a1a;
}

#floppy-mix-container {
    width: 100%;
    height: 100%;
    background: #1a1a1a;
    padding: 1 2;
}

#floppy-mix-header {
    width: 100%;
    height: auto;
    background: #2d2d2d;
    border: solid #cc5500;
    padding: 1;
    margin-bottom: 2;
}

#floppy-mix-title-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;
}

#floppy-mix-title {
    color: #ff8c00;
    text-style: bold;
    text-align: left;
    background: #2d2d2d;
    width: 1fr;
    padding: 1 2;
}

#floppy-mix-status-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;
    padding: 0 1;
}

#floppy-mix-controls-row {
    width: 100%;
    height: auto;
    align: center middle;
    padding: 0 1;
}

#floppy-mix-main-content {
    width: 100%;
    height: 1fr;
    margin-bottom: 1;
}

TrackSelectionPanel {
    width: 1fr;
    height: 100%;
    background: #1a1a1a;
    border: solid #ff8c00;
    padding: 1;
}

#track-selection-container {
    width: 100%;
    height: 100%;
}

#track-selection-label {
    color: #ff8c00;
    text-style: bold;
    padding: 0 0 1 0;
    margin-bottom: 1;
    background: #1a1a1a;
}

#track-list {
    width: 100%;
    height: 1fr;
    background: #1a1a1a;
    border: none;
    overflow-x: scroll;
    scrollbar-size-horizontal: 1;
}

#track-list ListItem {
    width: auto;
    min-width: 100%;
}

#track-list ListItem Static {
    width: auto;
    min-width: 100%;
}

ListItem.selected {
    background: #2d2d2d;
    color: #ffb347;
}

ListItem.selected:hover {
    background: #3d3d3d;
    color: #ffb347;
}

InstructionsPanel {
    width: 1fr;
    height: 100%;
    background: #1a1a1a;
    border: solid #ff8c00;
    padding: 1;
    margin-left: 2;
}

#instructions-container {
    width: 100%;
    height: 100%;
}

#instructions-label {
    color: #ff8c00;
    text-style: bold;
    padding: 0 0 1 0;
    margin-bottom: 1;
    background: #1a1a1a;
}

#instructions-input {
    width: 100%;
    height: 1fr;
    background: #0a0a0a;
    border: solid #cc5500;
    padding: 1;
}

TextArea {
    background: #0a0a0a;
    color: #fff8dc;
}

TextArea:focus {
    border: solid #ff8c00;
}

#progress-spinner {
    width: auto;
    margin-right: 2;
}

#status-display {
    color: #ffb347;
    text-align: left;
    background: #2d2d2d;
}

#save-button {
    margin-right: 2;
}

#discard-button {
    margin-left: 2;
}

Button {
    background: #2d2d2d;
    color: #fff8dc;
    border: solid #ff8c00;
}

Button:hover {
    background: #3d3d3d;
    color: #ffb347;
}

Button:focus {
    border: solid #ffb347;
}

Button.success {
    border: solid #00cc00;
}

Button.error {
    border: solid #cc0000;
}

FilenamePromptScreen {
    align: center middle;
}

#filename-prompt-container {
    width: 60;
    height: auto;
    background: #1a1a1a;
    border: thick #ff8c00;
    padding: 2;
}

#filename-prompt-title {
    color: #ff8c00;
    text-style: bold;
    text-align: center;
    background: #2d2d2d;
    padding: 1;
    border: solid #cc5500;
    margin-bottom: 1;
}

#filename-prompt-label {
    color: #fff8dc;
    text-align: center;
    padding: 1;
    margin-bottom: 1;
}

#filename-input {
    width: 100%;
    height: 3;
    background: #0a0a0a;
    color: #fff8dc;
    border: solid #cc5500;
    padding: 0 1;
    margin-bottom: 1;
}

#filename-input:focus {
    border: solid #ff8c00;
}

#filename-prompt-buttons {
    width: 100%;
    height: auto;
    align: center middle;
}

#save-confirm-button {
    margin-right: 2;
}

#cancel-button {
    margin-left: 2;
}

#start-mix-button {
    width: auto;
    min-width: 16;
    background: #2d2d2d;
    color: #ff8c00;
    border: solid #ff8c00;
    text-style: bold;
    margin-left: 4;
}

#start-mix-button:hover {
    background: #ff8c00;
    color: #1a1a1a;
}

#start-mix-button:focus {
    border: thick #ffb347;
}

OpenRouterKeyPromptScreen {
    align: center middle;
}

#openrouter-key-prompt-container {
    width: 70;
    height: auto;
    background: #1a1a1a;
    border: thick #ff8c00;
    padding: 2;
}

#openrouter-key-prompt-title {
    color: #ff8c00;
    text-style: bold;
    text-align: center;
    background: #2d2d2d;
    padding: 1;
    border: solid #cc5500;
    margin-bottom: 1;
}

#openrouter-key-prompt-label {
    color: #fff8dc;
    text-align: center;
    padding: 1;
    margin-bottom: 1;
}

#openrouter-key-input {
    width: 100%;
    height: 3;
    background: #0a0a0a;
    color: #fff8dc;
    border: solid #cc5500;
    padding: 0 1;
    margin-bottom: 1;
}

#openrouter-key-input:focus {
    border: solid #ff8c00;
}

#openrouter-model-label {
    color: #fff8dc;
    text-align: left;
    padding: 0 1;
    margin-bottom: 0;
}

#openrouter-model-input {
    width: 100%;
    height: 3;
    background: #0a0a0a;
    color: #fff8dc;
    border: solid #cc5500;
    padding: 0 1;
    margin-bottom: 1;
}

#openrouter-model-input:focus {
    border: solid #ff8c00;
}

Input {
    background: #0a0a0a;
    color: #fff8dc;
}

#openrouter-key-help-text {
    width: 100%;
    color: #ffb347;
    text-align: left;
    padding: 1;
    margin-bottom: 1;
    background: #0a0a0a;
    border: solid #cc5500;
}

#openrouter-key-prompt-buttons {
    width: 100%;
    height: auto;
    align: center middle;
}

#openrouter-key-confirm-button {
    margin-right: 2;
}

#openrouter-key-cancel-button {
    margin-left: 2;
}

HelpScreen {
    align: center middle;
}

#help-container {
    width: 90;
    height: auto;
    max-height: 90%;
    background: #1a1a1a;
    border: thick #cc5500;
    padding: 2;
}

#help-content {
    width: 100%;
    height: auto;
    max-height: 35;
    background: #0a0a0a;
    color: #fff8dc;
    border: solid #cc5500;
    padding: 2;
    margin-bottom: 1;
    overflow-y: auto;
    scrollbar-size-vertical: 1;
}

#help-close-button {
    width: 100%;
    background: #2d2d2d;
    color: #ff8c00;
    border: solid #cc5500;
    text-style: bold;
}

#help-close-button:hover {
    background: #3d3d3d;
    color: #ffb347;
}

#help-close-button:focus {
    border: solid #ff8c00;
}
